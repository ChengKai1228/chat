<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.CreateAccountFragment">

     <EditText
    android:id="@+id/et_1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="250dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/text_box"
    android:hint="暱稱"
    android:maxLines="1"
    android:padding="12dp"
    android:paddingLeft="10dp"
    android:textSize="16sp" />
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_centerVertical="true"/>


    <EditText
        android:id="@+id/et_2"
        android:background="@drawable/text_box"
        android:padding="12dp"
        android:layout_marginStart="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/et_1"
        android:layout_marginTop="10dp"
        android:hint="電子郵件帳號"

        android:maxLines="1"
        android:paddingLeft="10dp"
        android:textColorHint="#858484"
        android:textSize="16sp"
        android:textColor="#858484" />
    <EditText
        android:id="@+id/et_3"
        android:background="@drawable/text_box"
        android:padding="12dp"
        android:layout_marginStart="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/et_2"
        android:layout_marginTop="10dp"
        android:hint="密碼"
        android:inputType="textPassword"
        android:maxLines="1"

        android:paddingLeft="10dp"
        android:textColorHint="#858484"
        android:textSize="16sp"
        android:textColor="#858484" />
    <EditText
        android:id="@+id/et_4"
        android:background="@drawable/text_box"
        android:padding="12dp"
        android:layout_marginStart="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/et_3"
        android:layout_marginTop="10dp"
        android:hint="確認密碼"
        android:inputType="textPassword"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:textColorHint="#858484"
        android:textSize="16sp"
        android:textColor="#858484" />

    <Button
        android:id="@+id/bt_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_4"
        android:layout_marginTop="60dp"
        android:backgroundTint="#985945"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="註冊"
        android:textSize="17dp"
        />


    <ImageView
        android:src="@drawable/ic_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:textStyle="bold"
        android:textColor="#985945"
        android:text="已有帳號，返回登陸"/>

</RelativeLayout>